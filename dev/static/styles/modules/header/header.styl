.header
    background-color #dcdcdc
    padding 4.5rem 0 5.4rem
    color #777777

    &__wrap
        display flex
        justify-content space-between
        align-items center
        flex-direction column

        @media(min-width $grid-lg)
            flex-direction row

    &__logo
        &-img
            width 25rem
            height auto

            @media(min-width $grid-lg)
                width 100%
    
    &__info
        font-size 1.7rem
        margin-top 2.2rem
        margin-bottom 2.2rem

        @media(min-width $grid-lg)
            align-self flex-start

    &__phone
        font-size 2.4rem
        font-weight 900

        @media(min-width $grid-lg)
            font-size 3.1rem
